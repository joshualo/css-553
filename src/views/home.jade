doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title The Three of Us - Project Management Dashboard
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
    link(href='/css/plugins/iCheck/custom.css', rel='stylesheet')
    link(href='/css/animate.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
  body
    #wrapper
      #page-wrapper.gray-bg
        .wrapper.wrapper-content.animated.fadeInRight
          if (err)
            .alert.alert-warning
              strong Oops something went wrong!
              |  #{err}
          .row
            .col-lg-6
              .widget.navy-bg.no-padding
                .p-m
                  h1.m-xs Existing Projects
                  br
                  each project in projects
                    a(href='/projects/#{project._id}')
                      .widget.yellow-bg.no-padding
                        .p-xs
                          h1.m-t-xxs #{project.name}
                          h3.font-bold.no-margins
                            | #{project.teamName}
                          small #{project.description}
            .col-lg-6
              .widget.navy-bg.no-padding
                .p-xs
                  h1.m-xs Create New Project
                  br
                  form.m-xs(role='form', action='/projects', method='POST')
                    .form-group
                      label Project Name
                      input.form-control(type='text', name='name', placeholder='Enter project name')
                    .form-group
                      label Team Name
                      input.form-control(type='text', name='teamName', placeholder='Enter team name')
                    .form-group
                      label Project Description
                      textarea.form-control(type='text', name='description', rows=5, placeholder='Enter project description')
                    button.btn.btn-sm.btn-warning(type='submit')
                      strong Create

    // Mainly scripts
    script(src='/js/jquery-2.1.1.js')
    script(src='/js/jquery-ui-1.10.4.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/plugins/slimscroll/jquery.slimscroll.min.js')
    // Custom and plugin javascript
    script(src='/js/plugins/pace/pace.min.js')
